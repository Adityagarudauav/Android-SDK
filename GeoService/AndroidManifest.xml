<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.navigine.geo_service"
      android:versionCode="1"
      android:versionName="1.0"
      android:installLocation="preferExternal">
    
    <uses-sdk android:minSdkVersion="18"/>
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    
    <application android:label="Geo Service"
                 android:icon="@drawable/ic_launcher">
    
        <activity android:name="MainActivity"
                  android:label="Geo Service"
                  android:configChanges="keyboardHidden|orientation"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <service android:name="com.navigine.geo_service.GeoService"
                 android:exported="true"/>
        
        <!-- Declaring broadcast receiver for BOOT_COMPLETED event -->
        <receiver android:name="com.navigine.emergency_call.BootReceiver"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.PACKAGE_REPLACED"/>
            </intent-filter>
        </receiver>
        
    </application>
</manifest>
