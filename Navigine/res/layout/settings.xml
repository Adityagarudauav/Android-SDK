<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <!-- Background navigation mode: idle/normal/economic/super economic -->
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView android:id="@+id/settings__background_navigation_label"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="left|bottom"
            android:textSize="14sp"
            android:text="Background navigation mode:"/>
        
        <RadioButton android:id="@+id/radio_normal_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:onClick="onRadioButtonClicked"/>
        
        <RadioButton android:id="@+id/radio_economic_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Economic"
            android:onClick="onRadioButtonClicked"/>
        
        <RadioButton android:id="@+id/radio_economic2_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Super economic"
            android:onClick="onRadioButtonClicked"/>
    
        <RadioButton android:id="@+id/radio_idle_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idle"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
    
    <!-- Beacon service enabled/disabled -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView android:id="@+id/settings__beacon_service_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="14sp"
            android:text="Beacon service"/>
        
        <CheckBox android:id="@+id/settings__beacon_service_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    
    </LinearLayout>
    
    <!-- Navigation server enabled/disabled -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView android:id="@+id/settings__navigation_server_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="14sp"
            android:text="Navigation server"/>
        
        <CheckBox android:id="@+id/settings__navigation_server_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <!-- Navigation server address -->
    <EditText android:id="@+id/settings__navigation_server_address_edit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:scrollHorizontally="true"
        android:singleLine="true"/>
    
    <!-- Save navigation log -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView android:id="@+id/settings__save_navigation_log_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="14sp"
            android:text="Save navigation log"/>
        
        <CheckBox android:id="@+id/settings__save_navigation_log_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <!-- Save navigation track -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView android:id="@+id/settings__save_navigation_track_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="14sp"
            android:text="Save navigation track"/>
        
        <CheckBox android:id="@+id/settings__save_navigation_track_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <!-- Post messages enabled -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView android:id="@+id/settings__post_messages_enabled_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="14sp"
            android:text="POST messages enabled"/>
        
        <CheckBox android:id="@+id/settings__post_messages_enabled_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <!-- Vertical stretch -->
    <View android:layout_width="1dp"
          android:layout_height="0dp"
          android:layout_weight="1"/>
    
    <!-- Save button -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        
        <Button android:id="@+id/settings__save_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save settings"/>
    
    </LinearLayout>
    
</LinearLayout>
