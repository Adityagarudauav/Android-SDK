<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <!-- User hash -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp">
        
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/load_content_user_field"/>
        
        <EditText android:id="@+id/user_hash_edit"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:inputType="textVisiblePassword|textCapCharacters"
            android:digits="1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ-"
            android:maxLength="20"
            android:textSize="14sp"/>
    </LinearLayout>
    
    <!-- Buttons -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">
        
        <Button android:id="@+id/user_hash_dialog__login_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FF8C00"
            android:textSize="14sp"
            android:text="LOGIN"/>
        
        <Button android:id="@+id/user_hash_dialog__cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FF8C00"
            android:textSize="14sp"
            android:text="CANCEL"/>
        
    </LinearLayout>

</LinearLayout>
