<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView android:id="@+id/measuring_mode__map_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    
    <ImageView android:id="@+id/measuring_mode__center_target_image"
        android:src="@drawable/target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    
    <ImageView android:id="@+id/measuring_mode__scale_image"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="right|bottom"/>
    
    <LinearLayout android:id="@+id/measuring_mode__measuring_panel_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#AA000001">
        
        <TextView android:id="@+id/measuring_mode__measuring_panel_prompt_label"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1.0"
            android:textSize="15dp"
            android:background="@null"/>
        
        <Button android:id="@+id/measuring_mode__measuring_panel_start_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="#00000001"
            android:text="@string/start_button"/>
        
        <Button android:id="@+id/measuring_mode__measuring_panel_stop_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="#00000001"
            android:text="@string/stop_button"/>
    
    </LinearLayout>
    
    <Button android:id="@+id/measuring_mode__prev_floor_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="0dp"
        android:layout_gravity="top|left"
        android:background="@drawable/back"/>
    
    <TextView android:id="@+id/measuring_mode__current_floor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:textSize="20dp"
        android:textColor="#000000"/>
        
    <Button android:id="@+id/measuring_mode__next_floor_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="0dp"
        android:layout_gravity="top|right"
        android:background="@drawable/forward"/>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right">
            
        <Button android:id="@+id/measuring_mode__add_point_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="#80000001"
            android:textSize="20sp"
            android:text="+P"/>
        
        <Button android:id="@+id/measuring_mode__add_beacon_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#80000001"
            android:textSize="20sp"
            android:text="+B"/>
    </LinearLayout>
        
</FrameLayout>
